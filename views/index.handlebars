{{!-- Templating for all Articles  --}}

{{!-- Iterate Over all the articles --}}
{{#each articles}}
  <ul class="collapsible" data-collapsible="accordion">

    <!-- Article Drop Down -->
    <li>
      <div  class="collapsible-header blue-grey lighten-4  z-depth-2">
        <i class="material-icons">library_books</i> <b>{{updated}}</b>
        <div style="clear: left; line-height: 110%; padding-bottom: 10px;"><b>{{title}}</b></div>
      </div>
      <div class="collapsible-body grey lighten-5">
        <p>
          {{summary}}

          <br><br>

          <i>Please read the full article <a href="{{link}}" target="_new">here</a>.</i>
        </p>
          
      </div>
    </li>


    <!-- Add Comments Drop Down -->
    <li>
      <div class="collapsible-header grey lighten-4  z-depth-2"><i class="material-icons">thumbs_up_down</i>Add a Comment</div>
      <div class="collapsible-body grey lighten-4">

        <form id="form-add-{{_id}}" action="add/comment/{{_id}}" method="post" class="grey lighten-4">

          <!-- Author Name Input -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <input id="author_name" name="name" type="text" class="validate">
              <label for="author_name">Your Name:</label>
            </div>
          </div>
          
          <!-- Comment Input -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <textarea id="comment_box" name="comment" class="materialize-textarea"></textarea>
              <label for="comment_box">Your Reaction:</label>
            </div>
          </div>

            <!-- Submit Button -->
            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
              <center><input class="btn grey" data-id="{{_id}}" type="submit" value="Submit"></center>
              </div>
            </div>
          
        </form>

      </div>
    </li>


    <!-- View Comments Drop Down -->
    <li>
      <div class="collapsible-header grey lighten-4"><i class="material-icons">comment</i>View Comments</div>
      <div class="collapsible-body grey lighten-4">
      
        {{!-- Check if the article has comments --}}
        {{#if notes}}

          {{!-- Article has comments so iterate over them  --}}
          <ul class="collection">
            {{#each notes}}
            
              <li class="collection-item grey lighten-4">

                {{!-- Add Author Name --}}
                <b>{{author}}</b> 

                {{!-- Add a Delete Button --}}
                <span class="badge">
                  <form id="form-delete-{{_id}}" action="remove/comment/{{_id}}" method="post">
                    <input class="btn-small white-text deep-orange darken-5 delete-comment-button" data-id="{{_id}}" type="submit" value="Delete">
                  </form>
                </span>

                <br>

                {{!-- Add the Content of the Comment --}}
                {{commentBody}}

              </li> 
            {{/each}}
          </ul>
        
        {{!-- No comments, so display message --}}
        {{else}}
          <p><i class="material-icons">not_interested</i>No Comments Yet  </p>
        {{/if}}
            
        
      </div>
    </li>

  </ul>
{{/each}}